// MainContainer

@import "~styles/vars";

.MainContainer
    display: block
    h5
        position absolute
    h1
        font-size: 1.5rem
        font-weight: bold
        letter-spacing: 8px
    h2
        color: #000000
        opacity: 0.6
        letter-spacing: 4px
    p
        letter-spacing: 4px
    &:after
        content: '';
        display: block;
        position absolute;
        top: 0;
        right: 0;
        width: 60%;
        height: 100vh;
        background: white;
        z-index 2


.logo
    position: absolute
    top: 1rem;
    left: 1.5rem;
    color: #fff;
    z-index 999

.about-button
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    color: #000;
    z-index: 1100;
    cursor: pointer;
    &:hover 
        span
            background: black;
    span
        position: absolute
        display: block
        top: 48%
        right: 110%
        width: 15px
        height: 5px
        background: #000;
        transform: rotate(0) scale(1)
        transition: right .3s ease, transform .3s 1.4s ease;
        &:before
            content: ''
            position: absolute
            display: block
            top: 0
            left: 0
            width: 15px
            height: 5px
            background: #000
            transform-origin: center
            transform: rotate(90deg)
    h1
        position relative
        transition: opacity .2s ease;

.about-button.about-button-actived 
    span
        right: 1.5rem
        transform: rotate(-45deg) scale(1.3)
        transition: right .3s ease, transform .3s 1s ease;
    h1
        opacity: 0;

.project__image
    position: absolute
    top: 50%
    left 30%
    width: 600px
    height: 600px
    transform: translate(-50%, -50%)
    background-size: cover
    background-repeat: no-repeat
    background-position: center
    z-index: 999
    &:before
        content: ''
        display: block
        position: absolute
        bottom: -100px
        left: 54%
        transform: translateX(-50%)
        width: 100%
        height: 70px
        background: radial-gradient(rgba(0,0,0,1), rgba(0,0,0,0.4));
        border-radius: 40%
        filter: blur(10px)
        opacity: 0.3
        z-index: 1

.button__next,
.button__previous
    position: absolute
    top: 50%
    width: 60px
    height 60px
    background: none
    border: 2px solid
    transform: scale(1) translateY(-50%);
    border-radius: 50%
    z-index 999
    cursor pointer
    border-color: #000
    transition: transform 0.3s ease;
    &:hover 
        transform: scale(1.2) translateY(-50%);
    &:before,
    &:after
        content: ''
        display: block
        position: absolute
        top: 50%
        left 50%
        width: 8px
        height: 2px
    &:before
        transform: translate(-50%, -50%) rotate(-45deg)
    &:after
        transform: translate(-50%, -50%) rotate(45deg)

.button__previous
    left: 30px
    &:before,
    &:after
        background: #000
        transform-origin: center left


.button__next
    right 30px
    &:before,
    &:after
        background: #000
        transform-origin: center right

.button__previous--disabled,
.button__next--disabled
    opacity: 0.5
    pointer-events: none


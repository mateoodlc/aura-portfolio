.logo
    position: absolute
    top: 1rem;
    left: 1.5rem;
    color: #fff;
    z-index 999
    user-select: none
    h1
        color: #fff !important;

.about-button
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    color: #000;
    z-index: 1100;
    cursor: pointer;
    user-select: none
    span
        position absolute
        display: block
        top: 45%
        right: 110%
        width: 30px;
        height: 30px;
        border-radius: 50%;
        transform: translateY(-50%);
        background: #fff;
        box-shadow: 0px 2px 6px 4px rgba(0, 0, 0, 0.1);
        transition: right .3s ease, transform .3s 1.4s ease;
        &:before, &:after
            content: ''
            position: absolute
            display: block
            top: 50%
            left: 50%
            width: 12px
            height: 3px
            border-bottom-left-radius: 7px;
            border-bottom-right-radius: 7px;
            border-top-left-radius: 7px;
            border-top-right-radius: 7px;
            background: #000
        &:before
            transform: translate(-50%, -50%) rotate(90deg)
        &:after
            transform: translate(-50%, -50%) rotate(0) scale(1)
    h1
        position relative
        transition: opacity .2s ease;

.about-button.about-button-actived
    span
        right: 1rem
        transform: translateY(-50%) rotate(-45deg) scale(1.05)
        +below(800px)
            right: 0
    h1
        opacity: 0;


.project__image
    position: absolute
    top: 50%
    left 30%
    width: 600px
    height: 600px
    transform: translate(-50%, -50%)
    background-size: cover
    background-repeat: no-repeat
    background-position: center
    z-index: 999
    transition: left .3s ease
    &:before
        content: ''
        display: block
        position: absolute
        bottom: -100px
        left: 54%
        transform: translateX(-50%)
        width: 100%
        height: 70px
        background: radial-gradient(rgba(0,0,0,1), rgba(0,0,0,0.4));
        border-radius: 40%
        filter: blur(10px)
        opacity: 0.3
        z-index: 1
    +below(1400px)
        width: 40%;
        height: 0;
        padding-top: 40%;
    +below(800px)
        top: 30%;
        left: 50%;
        width: 250px;
        height: 250px;
        &:before
            left: 50%;
            bottom: -20px;
            background: radial-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.1));

.project__image.project__image--slided
    left: 20%;

.button__next,
.button__previous
    position: absolute
    top: calc(50% - 30px)
    width: 60px
    height 60px
    background: none
    border: 2px solid
    transform: scale(1);
    border-radius: 50%
    z-index 999
    cursor pointer
    border-color: #000
    transition: transform 0.3s ease, opacity .3s ease;
    +above(800px)
        &:hover
            transform: scale(1.2);
    &:before,
    &:after
        content: ''
        display: block
        position: absolute
        top: 50%
        left 50%
        width: 8px
        height: 8px
    &:before
        transform: translate(-50%, -50%) rotate(-45deg)
    &:after
        transform: translate(-50%, -50%) rotate(45deg)
    +below(800px)
        top: unset;
        top: 12rem;
        width: 45px
        height: 45px

.button__previous
    left: 30px
    &:before
        border-left: 2px solid black;
        border-top: 2px solid black;
    +below(800px)
        left: 1.5rem


.button__next
    right 30px
    &:before
        border-right: 2px solid black;
        border-bottom: 2px solid black;
    +below(800px)
        right: 1.5rem

.button__previous--disabled,
.button__next--disabled
    opacity: 0.2
    pointer-events: none


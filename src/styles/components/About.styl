// About

@import "~styles/vars";

.About
    position absolute
    display block
    width: 100%
    transform-origin: right
    z-index 1001
    a
        position: relative;
        width: 60px;
        height: 60px;
        background: $background;
        border-radius: 50%;
        &:first-of-type
            margin-right: 20px;
    svg
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 50% !important;
        height: 50% !important;
        path
            fill: #fff
    +below(800px)
        a
            width: 40px;
            height: 40px;
            &:first-of-type
                margin-right: 10px
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
h1{
    font-family: montserrat;
    font-size: 72px;
    font-weight: bold;
    color: #323232;
    text-align: left;
}
p{
    font-family: pt sans;
    font-size: 16px;
    font-weight: normal;
    color: #323232;
}

.about__wave
    position: absolute
    top: 0
    right: 0
    width: 100%
    height: 100%
    transform-origin: right;
    transform: scaleX(0);
    background: #1c1f24
    z-index: 999

.body_content{
    width: 100%;
    height 100vh;
    display: flex;
    flex-wrap: wrap
    flex-direction: row;
    align-content: unset;
    padding: 0 10%;
    padding-top: 25vh;
    background-color: #fff;
    +below(800px) {
        height: unset;
        align-content: flex-start;
        padding: 0 1.5rem;
        padding-top: 20%;
        padding-bottom: 20%;
    }
}
.about__text {
    position: absolute;
    top: 0;
    width: 100%
    +below(800px) {
        position: unset;
    }
}
.about__name
    display: inline-flex;
    width: 40%;
    flex-direction: column;
    +below(800px)
        display: block;
        width: unset;
    +below(1300px)
        width: 50%;


.about__content{
    position: relative;
    display: inline-flex;
    width: 50%;
    min-width: 360px;
    margin-top: 12px;
    flex-direction: column;
    +below(800px) {
        display: block;
        width: 100%;
        min-width: unset;
        padding-top: 10%;
    }
}
.about__social{
    justify-content: space-between;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}
.about__contact{
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    margin-top: 10%;
    +below(550px) {
        display: block;
    }
}
.about__contact-info{
    margin-left: 30px;
    display: inline-flex;
    flex-direction: column;
    +below(800px) {
        display: block;
        width: 100%;
        margin-left: 0;
        margin-top: 15px;
        font-size: 13px;
    }
}
.about__contact-icon{
    width: 40px;
    height: 40px;
}
.about__line{
    width: 105px;
    height: 0px;
    border: 2px solid #323232;
}

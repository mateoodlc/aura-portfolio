// About

@import "~styles/vars";

.About
    position absolute
    z-index 1001
    width: 100%
    display block
    transform-origin: right
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
h1{
    font-family: montserrat;
    font-size: 72px;
    font-weight: bold;
    color: #323232;
    text-align: left;
}
p{
    font-family: pt sans;
    font-size: 16px;
    font-weight: normal;
    color: #323232;
}

.about__close-button {
    position: absolute;
    top: 3rem;
    right: 3rem;
    width: 25px;
    height: 25px;
    &:before, &:after {
        content: '';
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        width: 25px;
        height 2px;
        background: black;
    }
    &:before {
        transform: translate(-50%, -50%) rotate(-45deg);
    }
    &:after {
        transform: translate(-50%, -50%) rotate(45deg);
    }
}

.about__wave
    position: absolute
    top: 0
    right: 0
    width: 100%
    height: 100%
    transform-origin: right;
    transform: scaleX(0);
    background: #1c1f24
    z-index: 999

.body_content{
    width: 100%;
    height 100vh;
    display: flex;
    flex-wrap: wrap
    flex-direction: row;
    align-content: unset;
    padding: 0 10%;
    padding-top: 35vh;
    background-color: #fff;
    +below(800px) {
        align-content: flex-start;
        padding-top: 7%;
    }
}
.about__text {
    position: absolute;
    top: 0;
    width: 100%
}
.about__name{
    width: 50%;
    display: inline-flex;
    width: 40%;
    flex-direction: column;
}
.about__content{
    position: relative;
    display: inline-flex;
    width: 50%;
    min-width: 360px;
    margin-top: 29px;
    flex-direction: column;
}
.about__social{
    width: 120px;
    justify-content: space-between;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}
.about__contact{
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    margin-top: 10%;
}
.about__contact-info{
    margin-left: 30px;
    display: inline-flex;
    flex-direction: column;

}
.about__contact-icon{
    width: 40px;
    height: 40px;
}
.about__line{
    width: 105px;
    height: 0px;
    border: 2px solid #323232;
}

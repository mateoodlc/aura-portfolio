// About

@import "~styles/vars";

.About
    position relative
    z-index 999
    display block
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
h1{
    font-family: montserrat;
    font-size: 72px;
    font-weight: bold;
    color: #323232;
    text-align: left;
}
p{
    font-family: pt sans;
    font-size: 16px;
    font-weight: normal;
    color: #323232;
}
.body_content{
    width: 100%;
    height 100vh;
    display: flex;
    flex-direction: row;
    padding-left: 10%;
    padding-top: 7%;
    background-color: #fff;
}
.name{
    width: 50%;
    display: inline-flex;
    width: 40%;
    flex-direction: column;
}
.about{
    display: inline-flex;
    width: 50%;
    margin-top: 10%;
    flex-direction: column;
}
.social{
    width: 120px;
    justify-content: space-between;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}
.contact{
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    margin-top: 10%;
}
.contact_info{
    margin-left: 30px;
    display: inline-flex;
    flex-direction: column;
    
}
.icon{
    width: 40px;
    height: 40px;
}
.line{
    width: 105px;
    height: 0px;
    border: 2px solid #323232;
}

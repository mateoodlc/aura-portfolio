// ProjectComponent

@import "~styles/vars";


.ProjectComponent
    display block
    p, h1, h2, h3, h4
        color: #000
    button
        box-sizing: border-box
        text-align: center
        padding: 20px 50px
        background: #cccccc
        color: #fff
        border: none
        border-radius: 30px
    svg
        position: absolute
        z-index 100

.main-container
    position: absolute
    top: 0
    left: 0
    display: flex
    width: 100%
    height: 100vh
    overflow: hidden

.project__image
    position: absolute
    top: 50%
    left 50%
    width: 600px
    height: 600px
    transform: translate(-50%, -50%)
    background-size: cover
    background-repeat: no-repeat
    background-position: center

.project__background
    position relative
    width: 50%
    height 100%
    background-size: cover
    background-repeat: no-repeat
    background-position: top center
    transform-origin: top
    span
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        opacity: 0.9

.project__description
    position relative
    display: inline-flex
    flex-direction: column
    justify-content: center
    align-content: space-between
    width: 50%
    height: 100%
    background: #fff
    transform-origin: bottom

.project__description-container
    position absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)


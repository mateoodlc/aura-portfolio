// ProjectComponent

@import "~styles/vars";


.ProjectComponent
    display block
    position: relative
    z-index: 997
    p, h1, h2, h3, h4
        color: #000
    button
        box-sizing: border-box
        text-align: center
        border: none
        border-radius: 50%
        letter-spacing: 2px
    svg
        position: absolute
        z-index: 100
        width: 35%

.main-container
    position: absolute
    top: 0
    left: 0
    display: flex
    width: 100%
    height: 100vh
    overflow: hidden

.project__wave
    position absolute
    top: 0
    right: 0
    width: 65%
    height: 100vh
    transform: scaleY(0)
    background: #1c1f24
    z-index 999

.project__background
    position relative
    width: 40%
    height 100%
    background-size: cover
    background-repeat: no-repeat
    background-position: top center
    transform-origin: top
    span
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        opacity: 0.9

.project__description
    position relative
    display: inline-flex
    flex-direction: column
    justify-content: center
    align-content: space-between
    width: 60%
    height: 100%
    transform-origin: bottom
    z-index 3

.project__description-container
    position absolute
    top: 45%
    padding: 0 20%;
    transform: translate(-50%, -50%)
    h2
        letter-spacing: 5px
        opacity: 0.3
        font-weight: 500

.project__description-title
    font-size: 5rem
    font-weight: 800
    margin-bottom: 1.5rem

.project__background-number
    position absolute
    top: 20%
    left: 40%
    transform: translate(-50%, -30%)
    font-size: 28rem
    font-weight: 500
    opacity: 0.2

.project__show-more--button 
    position: absolute;
    display: block;
    bottom: 32px;
    right: 32px;
    width: 60px;
    height: 60px;
    background: #1c1f24;
    box-shadow: 0 10px 20px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease
    cursor: pointer
    &:before, &:after
        content: '';
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        width: 15px;
        height: 2px;
        background: #fff;
    &:before
        transform: translate(-50%, -50%)
    &:after
        transform: translate(-50%, -50%) rotate(90deg);
    &:hover 
        transform: scale(1.1);

